<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Ticket"
            android:layout_marginTop="140dp"
            android:textSize="24sp"
            android:fontFamily="@font/poppinsbold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/spinner_ticket"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/dropdown_shape"
            android:autofillHints="Jenis Tiket"
            android:backgroundTint="#EDEDED"
            android:layout_below="@id/tvTicket"
            android:paddingLeft="32dp"
            android:spinnerMode="dropdown"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuyTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Ticket"
            android:fontFamily="@font/poppinsbold"
            android:layout_below="@+id/spinner_ticket"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:textColor="@color/white"
            android:background="@drawable/register_shape"
            />

    </RelativeLayout>

</FrameLayout>